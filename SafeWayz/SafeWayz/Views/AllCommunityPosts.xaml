<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:behaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             xmlns:converters1="clr-namespace:SafeWayz.Converters"
             prism:ViewModelLocator.AutowireViewModel="True" 
             x:Class="SafeWayz.Views.AllCommunityPosts">

    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding IncidentsFromDB}" HasUnevenRows="True" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="20">
                                <FlexLayout AlignContent="Start" JustifyContent="SpaceBetween">
                                    <Label Text="{Binding Incident}"></Label>
                                    <Label Text="{Binding Area}"></Label>
                                </FlexLayout>
                                
                                <StackLayout>
                                    <Label Text="{Binding IncidentDescription}"></Label>
                                </StackLayout>
                                
                                <StackLayout>
                                    <Button Text="COMMENT" Command="{Binding PostAComment}" HorizontalOptions="StartAndExpand"></Button>
                                    <Button Text="UPVOTE" Command="{Binding UpvoteThisPost}" HorizontalOptions="EndAndExpand"></Button>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.Behaviors>
                    <behaviors:EventToCommandBehavior EventName="ItemTapped" 
                                                      Command="{Binding NavigateCommand}"
                                                      EventArgsConverter="{converters1:ItemTappedEventArgsConverter}" />
                </ListView.Behaviors>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
  
</ContentPage>